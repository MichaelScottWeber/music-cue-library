 <% include ../partials/header %>

<div class="container">

  <div class="row">
    <h1 style="text-align: center;">Add New Comment to <%= song.title %></h1>
    <div style="width: 30%; margin: 30px auto;">
      <form class="" action="/music/<%= song._id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[author]" placeholder="Your Name">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="Write comment here">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/music/<%= song.title %>">Go Back</a>
    </div>
  </div>

</div>



<% include ../partials/footer %>
